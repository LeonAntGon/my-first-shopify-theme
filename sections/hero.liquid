<section class="hero-section" style="background-image: url('{% if section.settings.image != blank %}{{ section.settings.image | img_url: 'master' }}{% else %}{{ 'placeholder-image.jpg' | asset_url }}{% endif %}'); background-position: {{ section.settings.image_position }};">
  <div class="hero-content">
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 600px;
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 20px;
  }

  .hero-heading {
    font-size: 3.5em;
    font-weight: bold;
    margin-bottom: 20px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
  }

  .hero-subheading {
    font-size: 1.5em;
    margin-bottom: 30px;
    color: {{ section.settings.subheading_color }};
  }


  @media (max-width: 768px) {
    .hero-section {
      height: 450px;
    }
    .hero-heading {
      font-size: 2.5em;
    }
    .hero-subheading {
      font-size: 1.2em;
    }
    .hero-button {
      padding: 12px 25px;
      font-size: 1em;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      height: 350px;
    }
    .hero-heading {
      font-size: 2em;
    }
    .hero-subheading {
      font-size: 1em;
    }
  }
</style>

{% schema %}
{
  "name": "Sección Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de fondo"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Posición de la imagen de fondo",
      "default": "center center",
      "options": [
        { "value": "top left", "label": "Arriba a la izquierda" },
        { "value": "top center", "label": "Arriba al centro" },
        { "value": "top right", "label": "Arriba a la derecha" },
        { "value": "center left", "label": "Centro a la izquierda" },
        { "value": "center center", "label": "Centro al centro" },
        { "value": "center right", "label": "Centro a la derecha" },
        { "value": "bottom left", "label": "Abajo a la izquierda" },
        { "value": "bottom center", "label": "Abajo al centro" },
        { "value": "bottom right", "label": "Abajo a la derecha" }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Tu Gran Título Aquí"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo/Descripción",
      "default": "Un texto impactante para describir tu propuesta de valor."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del Botón",
      "default": "Explorar Productos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del Botón"
    },
    {
      "type": "header",
      "content": "Colores del Texto"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del Título",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Color del Subtítulo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color del Texto del Botón",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Color de Fondo del Botón",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "General"
    }
  ]
}
{% endschema %}
