<div class="product-page">
  <div class="product-image">
    <img
      src="{{ product.selected_or_first_available_variant.image | default: product.featured_image | img_url: width: 800 }}"
      alt="Product image">
  </div>
  <div class="product-details">

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h1 class="product-title">{{ product.title }}</h1>

        {% when 'description' %}
          <p class="product-description">{{ product.description }}</p>

        {% when 'price' %}
          <p class="product-price">{{ product.price | money }}</p>

        {% when 'add_to_cart' %}
          <product-form
            variant-id="{{ product.selected_or_first_available_variant.id }}"
            product-handle="{{ product.handle }}">
            <script type="application/json" id="product-variants-json">
              {{ product.variants | json }}
            </script>

            {% form 'product', product %}
              {% if product.has_only_default_variant %}
                <input
                  type="hidden"
                  name="id"
                  value="{{ product.selected_or_first_available_variant.id }}">
              {% endif %}

              <!-- Variants as radio buttons -->
              <div class="variant-options">
                {% for variant in product.variants %}
                  <label class="variant-label">
                    <input
                      type="radio"
                      name="id"
                      value="{{ variant.id }}"
                      {% if variant == product.selected_or_first_available_variant %}checked{% endif %}>
                    <span>{{ variant.title }}</span>
                  </label>
                {% endfor %}
              </div>

              <!-- Checkout button below variants -->
              <div class="checkout-button-container">
                <button type="submit" class="button add-to-cart-btn">
                  Agregar al carrito
                </button>
              </div>
            {% endform %}
          </product-form>
      {% endcase %}
    {% endfor %}

  </div>
</div>

<style>
  /* Contenedor principal: imagen a la izquierda, detalles a la derecha */
  .product-page {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  /* Imagen ocupa m치s que la mitad */
  .product-image {
    flex: 1.5;
    display: flex;
    justify-content: center;
  }
  .product-image img {
    width: 100%;
    max-width: 400px;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  /* Detalles m치s peque침os */
  .product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  /* Separaci칩n entre elementos */
  .product-title {
    margin-bottom: 0.5rem;
  }
  .product-price {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: bold;
  }
  .product-description {
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  /* --- Variants styling --- */
  .variant-options {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .variant-label {
    cursor: pointer;
    border: 1px solid #000;
    border-radius: 4px;
    overflow: hidden;
  }
  .variant-label input {
    display: none;
  }
  .variant-label span {
    display: block;
    padding: 0.5rem 1rem;
    background: #fff;
    color: #000;
    transition: background 0.2s, color 0.2s;
  }
  .variant-label input:checked + span {
    background: #000;
    color: #fff;
  }

  /* --- Checkout button container --- */
  .checkout-button-container {
    width: 100%;
    margin-top: 0; /* ajustable */
  }
  .add-to-cart-btn {
    margin-top: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: none;
    background-color: #000;
    color: #fff;
    cursor: pointer;
    border-radius: 4px;
  }
</style>

{% schema %}
{
  "name": "Main Product",
  "tag": "section",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "title",
      "name": "Title"
    },
    {
      "type": "description",
      "name": "Description"
    },
    {
      "type": "price",
      "name": "Price"
    },
    {
      "type": "add_to_cart",
      "name": "Add to Cart Button"
    }
  ],
  "presets": [
    {
      "name": "Main Product",
      "blocks": [
        { "type": "title" },
        { "type": "description" },
        { "type": "price" },
        { "type": "add_to_cart" }
      ]
    }
  ]
}
{% endschema %}