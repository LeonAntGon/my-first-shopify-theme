<a
  href="{{ block.settings.button_link }}"
  class="button"
  style="
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.text_color }};
  "
>
  {{ block.settings.button_text }}
</a>


{% schema %}
{
  "name": "Botón Personalizable",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Haz clic aquí"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón",
      "default": "/"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Botón Default",
      "category": "Bloques",
      "settings": {
        "button_text": "Click me",
        "button_link": "/",
        "bg_color": "#007bff",
        "text_color": "#ffffff"
      }
    }
  ]
}
{% endschema %}
